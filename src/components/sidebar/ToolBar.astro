---
import Card from "../temple/Card.astro";
import { Icon } from "astro-icon/components";
import { t } from "@config";
---

<Card>
  <div class="toolbar-container p-4">
    <div class="flex justify-around items-center gap-4">
      <!-- Navigation Buttons -->
      <a
        href="/blog/tags"
        class="btn btn-circle btn-md border-base-content/20 bg-base-100 shadow-sm hover:scale-110 transition-transform duration-300 text-primary"
        aria-label={t("label.tagPage")}
        title={t("label.tagPage")}
      >
        <Icon name="lucide:tag" class="w-5 h-5" />
      </a>

      <a
        href="/blog/categories"
        class="btn btn-circle btn-md border-base-content/20 bg-base-100 shadow-sm hover:scale-110 transition-transform duration-300 text-secondary"
        aria-label={t("label.categoryPage")}
        title={t("label.categoryPage")}
      >
        <Icon name="lucide:folder" class="w-5 h-5" />
      </a>

      <a
        href="/blog/archives"
        class="btn btn-circle btn-md border-base-content/20 bg-base-100 shadow-sm hover:scale-110 transition-transform duration-300 text-accent"
        aria-label={t("label.archivePage")}
        title={t("label.archivePage")}
      >
        <Icon name="lucide:archive" class="w-5 h-5" />
      </a>

      <slot />
    </div>
  </div>
</Card>
