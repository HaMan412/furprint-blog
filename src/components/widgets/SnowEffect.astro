<canvas id="snow-canvas" class="fixed inset-0 z-[1] pointer-events-none"></canvas>

<script>
  const canvas = document.getElementById("snow-canvas") as HTMLCanvasElement;
  const ctx = canvas.getContext("2d");

  let width = window.innerWidth;
  let height = window.innerHeight;

  canvas.width = width;
  canvas.height = height;

  const particles: Snowflake[] = [];
  const particleCount = 100; // More snowflakes for a fuller effect

  class Snowflake {
    x: number;
    y: number;
    size: number;
    speedY: number;
    speedX: number;
    opacity: number;

    constructor() {
      this.x = Math.random() * width;
      this.y = Math.random() * height;
      this.size = Math.random() * 4 + 2; // Smaller, simpler snowflakes
      this.speedY = Math.random() * 1 + 0.5;
      this.speedX = Math.random() * 0.5 - 0.25; // Gentle horizontal drift
      this.opacity = Math.random() * 0.6 + 0.4;
    }

    update() {
      this.y += this.speedY;
      this.x += this.speedX;

      if (this.y > height) {
        this.y = -10;
        this.x = Math.random() * width;
      }
      if (this.x > width + 10) {
        this.x = -10;
      } else if (this.x < -10) {
        this.x = width + 10;
      }
    }

    draw() {
      if (!ctx) return;
      ctx.save();
      ctx.globalAlpha = this.opacity;
      ctx.fillStyle = "white";
      
      // Draw simple circle snowflake
      ctx.beginPath();
      ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
      ctx.fill();
      
      ctx.restore();
    }
  }

  function init() {
    for (let i = 0; i < particleCount; i++) {
      particles.push(new Snowflake());
    }
  }

  function animate() {
    if (!ctx) return;
    ctx.clearRect(0, 0, width, height);
    particles.forEach((particle) => {
      particle.update();
      particle.draw();
    });
    requestAnimationFrame(animate);
  }

  init();
  animate();

  window.addEventListener("resize", () => {
    width = window.innerWidth;
    height = window.innerHeight;
    canvas.width = width;
    canvas.height = height;
  });
</script>
