<div class="absolute bottom-[80px] md:bottom-[150px] left-0 w-full overflow-hidden leading-[0] z-0">
  <svg
    class="relative block w-[calc(100%+1.3px)] h-[60px] md:h-[100px]"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 24 150 28"
    preserveAspectRatio="none"
  >
    <defs>
      <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"></path>
    </defs>
    <g class="parallax">
      <use xlink:href="#gentle-wave" x="48" y="0" fill="var(--fallback-b3,oklch(var(--b3)/0.05))"></use>
      <use xlink:href="#gentle-wave" x="48" y="2" fill="var(--fallback-b3,oklch(var(--b3)/0.15))"></use>
      <use xlink:href="#gentle-wave" x="48" y="3" fill="var(--fallback-b3,oklch(var(--b3)/0.35))"></use>
      <use xlink:href="#gentle-wave" x="48" y="5" fill="var(--fallback-b3,oklch(var(--b3)/1))"></use>
    </g>
  </svg>
</div>

<!-- Solid background fill below wave -->
<div class="absolute bottom-0 left-0 w-full h-[80px] md:h-[150px] z-0 bg-base-300"></div>

<style>
  .parallax > use {
    animation: move-forever 25s cubic-bezier(0.55, 0.5, 0.45, 0.5) infinite;
  }
  .parallax > use:nth-child(1) {
    animation-delay: -2s;
    animation-duration: 5s;
  }
  .parallax > use:nth-child(2) {
    animation-delay: -3s;
    animation-duration: 7s;
  }
  .parallax > use:nth-child(3) {
    animation-delay: -4s;
    animation-duration: 10s;
  }
  .parallax > use:nth-child(4) {
    animation-delay: -5s;
    animation-duration: 15s;
  }
  @keyframes move-forever {
    0% {
      transform: translate3d(-90px, 0, 0);
    }
    100% {
      transform: translate3d(85px, 0, 0);
    }
  }
</style>
