---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import { t } from "@config";

interface Props {
  title: string;
  description?: string;
  image: string;
  infoIcon?: string;
  helpText?: string;
}

const {
  title,
  description,
  image,
  infoIcon = "lucide:help-circle",
  helpText = t("label.learnMore"),
} = Astro.props;

const accessibleHelpText = `${helpText}: ${title}`;
---

<div class="relative w-full overflow-hidden rounded-3xl shadow-2xl group">
  <div class="aspect-[21/9] w-full overflow-hidden">
    <Image
      src={image}
      alt={title}
      width={1600}
      height={900}
      format="webp"
      loading="eager"
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
    />
  </div>

  <div class="absolute bottom-6 left-6 md:bottom-10 md:left-10">
    <div class="inline-block bg-black/40 backdrop-blur-md px-6 py-3 rounded-2xl border border-white/20 shadow-lg">
      <h1 class="text-2xl md:text-4xl lg:text-5xl font-bold text-white tracking-wide">{title}</h1>
    </div>
  </div>

  {description && (
    <div class="absolute bottom-6 right-6 md:bottom-10 md:right-10">
      <div class="dropdown dropdown-top dropdown-end dropdown-hover">
        <label
          tabindex="0"
          aria-label={accessibleHelpText}
          class="group/btn btn btn-circle bg-black/40 backdrop-blur-md hover:bg-black/60 border border-white/20 text-white shadow-lg transition-all duration-300"
        >
          <Icon name={infoIcon} class="w-6 h-6" />
        </label>
        <div
          tabindex="0"
          class="dropdown-content z-[1] card w-72 p-2 shadow-xl bg-black/60 backdrop-blur-xl text-white border border-white/10 mb-4 rounded-2xl"
        >
          <div class="card-body p-4">
            <p class="text-sm leading-relaxed">{description}</p>
          </div>
        </div>
      </div>
    </div>
  )}
</div>
