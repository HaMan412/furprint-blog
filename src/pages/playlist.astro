<!-- 【关键修复】第一步：单独提交“通行证”，让质检员盖章 -->
<!-- 这个 script 标签没有特殊指令，所以会被 TypeScript 正常检查 -->
<script>
  declare const APlayer: any;
</script>

<!-- 【关键修复】第二步：正常发送“加急快递” -->
<!-- 这个 script 标签有 is:inline 和 define:vars，不会被 TypeScript 检查，但质检员已经认识 APlayer 了 -->
<script is:inline define:vars={{ songs }}>
  document.addEventListener('astro:page-load', () => {
    const ap_songs = songs.map(song => ({
      name: song.title,
      artist: song.artist,
      url: song.url,
      cover: song.cover,
    }));

    const ap = new APlayer({
      container: document.getElementById('player'),
      fixed: false,
      lrcType: 0,
      audio: ap_songs
    });

    const songItems = document.querySelectorAll('.song-item');

    songItems.forEach(item => {
      item.addEventListener('click', () => {
        const index = parseInt(item.dataset.index, 10);
        ap.list.switch(index);
        ap.play();
      });
    });

    ap.on('play', () => {
      const currentIndex = ap.list.index;
      songItems.forEach((item, index) => {
        if (index === currentIndex) {
          item.classList.add('playing');
        } else {
          item.classList.remove('playing');
        }
      });
    });
    
    ap.on('pause', () => {
        songItems.forEach(item => item.classList.remove('playing'));
    });
  });
</script>
