---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import FriendCard from "@/components/mdx/FriendCard.astro";
import { friends } from "@/data/friends"; // 导入友链数据
---

<BaseLayout title="友链">
  <MainCard
    title="dalao们"
    description="大佬不在我就是无敌的哈哈！"
    textOverlay="FRIENDS"
    infoIcon="lucide:link"
    image="https://vip.123pan.cn/1815727707/ymjew503t0l000d7w32x8oi2h7uosf6vDIYPAIUvAwUOAvxvAdrxAa==.webp"
  >
    <div class="space-y-10">
      <!-- Friends Section -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:users" class="w-6 h-6 text-primary" />
          <span>友链</span>
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
          {/* 使用 map 循环从数据文件渲染友链 */}
          {friends.map(friend => (
            <FriendCard
              name={friend.name}
              avatar={friend.avatar}
              description={friend.description}
              url={friend.url}
              bgImage={friend.bgImage}
            />
          ))}
        </div>
      </section>

      <div class="divider my-8">
        <Icon name="lucide:heart" class="w-10 h-10 text-primary" />
      </div>

      <!-- Add Friend Link Section -->
      <section class="text-center">
        <h2 class="text-2xl font-bold mb-4">互换友链吗喵喵喵？</h2>
        <p class="text-base-content/80 mb-6 max-w-2xl mx-auto">
        欢迎通过GitHub提交PR的方式互换友链，也可以通过邮件1805659145@qq.com联系我添加
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://github.com/HaMan412/furprint-blog/blob/master/src/data/friends.ts"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary gap-2"
          >
            <Icon name="lucide:github" class="w-5 h-5" />
            <span>通过 GitHub 添加</span>
          </a>
          <a href="mailto:1805659145@qq.com" class="btn btn-outline gap-2">
            <Icon name="lucide:mail" class="w-5 h-5" />
            <span>邮件联系</span>
          </a>
        </div>
      </section>
    </div>
  </MainCard>
</BaseLayout>